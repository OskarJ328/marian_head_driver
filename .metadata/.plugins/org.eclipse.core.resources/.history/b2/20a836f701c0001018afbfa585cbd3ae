#include "gpio.h"
#include "clock.h"
#include "tim.h"

int main(void)
{
	setup_clock();
	gpio_setup();
	tim_init();
	tim_start();

	while(1){
		for(uint32_t duty=0; duty <=1000; duty +=10){
			tim3_set_pwm_duty_permille(duty);
			delay_ms(20);
		}
	}
}


